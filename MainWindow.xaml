<Window
    x:Class="CSC385_Project.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSC385_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Margin="10" HorizontalAlignment="Stretch">
        <TextBlock
            Margin="0,5"
            FontSize="30"
            Text="Demo App" />
        <Button
            x:Name="executeSync"
            Margin="0,5"
            Padding="5"
            Click="executeSync_Click"
            Content="Normal Execute"
            FontSize="20" />
        <Button
            x:Name="executeAsync"
            Margin="0,5"
            Padding="5"
            Click="executeAsync_Click"
            Content="Async Execute"
            FontSize="20" />

        <Button
            x:Name="executeAsyncParallel"
            Margin="0,5"
            Padding="5"
            Click="executeAsyncParallel_Click"
            Content="Async Parallel Execute"
            FontSize="20" />
        <TextBlock x:Name="resultsWindow" Margin="0,5" />
    </StackPanel>
</Window>
