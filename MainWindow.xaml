<Window
    x:Class="CSC385_Project.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSC385_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Margin="10" HorizontalAlignment="Stretch"
                >
        <TextBlock Margin="0,5" Text="Demo App" 
                   FontSize="30"
                   />
        <Button x:Name="executeSync" Click="executeSync_Click"
                Content="Normal Execute"
                Padding="5"
                FontSize="20"
                Margin="0,5"
                />
        <Button x:Name="executeAsync" Click="executeAsync_Click" 
                Content="Async Execute"
                Padding="5"
                FontSize="20"
                Margin="0,5"
                />
        <TextBlock  x:Name="resultsWindow"
                    Margin="0,5"
                   />
    </StackPanel>
</Window>
